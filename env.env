TZ=America/New_York
PUID=1000
PGID=1000

# MariaDB for LibreNMS + Grafana
MARIADB_DATABASE=librenms
MARIADB_USER=librenms
MARIADB_PASSWORD=change_me_librenms_db_password
MARIADB_ROOT_PASSWORD=change_me_mariadb_root_password

# LibreNMS database settings
DB_HOST=db
DB_PORT=3306
DB_NAME=librenms
DB_USER=librenms
DB_PASSWORD=change_me_librenms_db_password
DB_TIMEOUT=60

# Grafana database settings (same MariaDB server, separate schema/user)
GRAFANA_DATABASE=grafana
GRAFANA_USER=grafana
GRAFANA_PASSWORD=change_me_grafana_db_password
GF_DATABASE_TYPE=mysql
GF_DATABASE_HOST=db:3306
GF_DATABASE_NAME=grafana
GF_DATABASE_USER=grafana
GF_DATABASE_PASSWORD=change_me_grafana_db_password

# InfluxDB setup
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=change_me_influx_admin_password
DOCKER_INFLUXDB_INIT_ORG=monitoring
DOCKER_INFLUXDB_INIT_BUCKET=metrics
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=change_me_influx_admin_token

# LibreNMS app settings
LIBRENMS_BASE_URL=http://localhost:8000
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=redis
MEMORY_LIMIT=256M
MAX_INPUT_VARS=1000
UPLOAD_MAX_SIZE=16M
OPCACHE_MEM_SIZE=128
REAL_IP_FROM=0.0.0.0/32
REAL_IP_HEADER=X-Forwarded-For
LOG_IP_VAR=remote_addr
DISPATCHER_NODE_ID=dispatcher1

# SNMP settings
LIBRENMS_SNMP_COMMUNITY=change_me_v2c_community
SNMP_PROCESSING_TYPE=log,execute,net
SNMP_USER=change_me_trap_user
SNMP_AUTH=change_me_trap_auth_password
SNMP_PRIV=change_me_trap_priv_password
SNMP_AUTH_PROTO=SHA
SNMP_PRIV_PROTO=AES
SNMP_SECURITY_LEVEL=priv
SNMP_ENGINEID=1234567890
SNMP_DISABLE_AUTHORIZATION=no
SNMP_EXTRA_MIB_DIRS=/data/mibs

# LibreNMS optional settings
LIBRENMS_WEATHERMAP=false
LIBRENMS_WEATHERMAP_SCHEDULE=*/5 * * * *

# SMTP relay (msmtpd)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_TLS=on
SMTP_STARTTLS=on
SMTP_TLS_CHECKCERT=on
SMTP_AUTH=on
SMTP_USER=change_me_smtp_user
SMTP_PASSWORD=change_me_smtp_password
SMTP_FROM=monitoring@example.com
